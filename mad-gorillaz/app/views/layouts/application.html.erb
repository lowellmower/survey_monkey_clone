<!DOCTYPE html>
<html>
<head>
  <title>MadGorillaz</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>
<% if session[:user_id] %>
<%current_user%>
<div class="navbar navbar nav">
  <%= link_to 'Home', root_path, class: "navbar-brand"%>
  <%= link_to 'Logout', logout_path, method: 'delete', class: "navbar-brand"%>
  <%= link_to 'Create', new_survey_path, class: "navbar-brand"%>
  <%= link_to @user.username, user_path(@user), class: "navbar-brand pull-right"%>
  <p class="glyphicon glyphicon-user pull-right avatar"></p>
</div>
<%end%>

<%= yield %>

</body>
</html>
